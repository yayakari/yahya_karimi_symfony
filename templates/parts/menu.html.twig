{% dump(app.request.get('_route')) %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container-fluid">
		<a class="navbar-brand" href="#">Navbar</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{path('default')}}">Home
						{% if route == 'default' %}
							(current)
						{% endif %}
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="{{path('app_logout')}}">Me d√©co</a>
				</li>

				{% for category in categories %}
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="{{path('category_article', {category: category.id})}}">{{category.name}}
							{% if route == 'category_article' and category.id == currentCategory%}
								(current)
							{% endif %}
						</a>
					</li>
				{% endfor %}
				{% if app.user.hasRole("ROLE_ADMIN") %}
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="{{path('article_index')}}">Administration des articles</a>
					</li>
				{% endif %}


			</ul>
			<div class="d-flex">
				Bonjour
				{{ app.user.firstname }}
				{{ app.user.lastname }}
			</div>
		</div>
	</div>
</nav>
